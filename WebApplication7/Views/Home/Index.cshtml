@using WebApplication7.Repositry;
@using WebApplication7.Repositry.IRepositry;
@model WebApplication7.ViewModels.PlaceViewModel
@{
	ViewData["Title"] = "Home Page";
}
@* .. *@
<!doctype html>
<link href="/css/Index.css" rel="stylesheet" />
<body >
    <section class="hero">
        <video autoplay muted loop playsinline >
            <source src="/Videos/Let s Go - Egypt A Beautiful Destinations Original.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="overlay" >
            <div class="content" >
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (User.Identity.IsAuthenticated == false)
                {
                    <h3> Welcome to PharaoGo <br><br> Book your trip now! </h3> <br>
                }
                @if (User.IsInRole("Visitor"))
                {
                    <h3> Welcome @User.Identity.Name to PharaoGo <br><br> Book your trip now! </h3>
                }

                <br>

                <div style="text-align: center;">
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <a href="/Account/Login">
                            <button type="button" class="btn btn-lg btn-primary">Log in</button>
                        </a>
                        <a href="/Account/Register">
                            <button type="button" class="btn btn-secondary btn-lg">Sign up</button>
                        </a>
                    }
                </div>

            </div>
        </div>
    </section>
    <nav class="footer-nav">
        
        
            <a href="#" onclick="GetData('Hotels')" class="nav-item">
                <span class="nav-icon">
                    <img src="/Images/hotel.png" alt="Alternate Text" style="width: 24px; height: 24px; object-fit: contain; display: inline-block; " />
                </span>
                <span class="nav-label">Hotels</span>
            </a>
        <a href="#" onclick="GetData('Museums')" class="nav-item">
                <span class="nav-icon"><img src="/Image/icons8-pharaoh-60.png" alt="Alternate Text" style="width: 24px; height: 24px; object-fit: contain; display: inline-block; " /></span>
            <span class="nav-label">Museum</span>
        </a>
        

    </nav>

    @* <section class="hotel-listings "> *@
        <div id="PlaceDetails">
        <section class="hotel-listings ">

            @foreach (var item in Model.RelatedPlaces)
            {

                <div class="hotel-card-wrapper">
                    <!-- Transparent button for the heart icon, hidden initially -->
                    <div class="heart-icon">
                        <button type="button" class="heart-btn" onclick="favoritePlace(@item.Place_Id);">
                            <img src="/Images/heart.png" alt="Heart Icon" />
                        </button>
                    </div>

                    <!-- The large clickable card -->
                    <a href="Home/GetPlace/@item.Place_Id">
                        <form asp-action="GetPlace" asp-controller="Home" asp-route-id="@item.Place_Id" method="get">
                            <div class="hotel-card">
                                @if (item.imageSrc == null || item.imageSrc == "")
                                {
                                    <img src="\Images\no-image-found.jpg" alt="NOImage" />
                                }
                                else
                                {
                                    <img src="@item.imageSrc" alt="Place Image" />
                                }
                                <div class="hotel-info">
                                    <h3>@item.Place_Name</h3>
                                    <p class="rating">Rating : @item.Place_Rating</p>
                                    <p><span class="new-price">Price: @item.Place_Price EGP</span></p>
                                </div>
                            </div>
                        </form>
                    </a>
                </div>
            }
        
        </section>

        </div>
    

 
 
</body>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
       
    <script>
        function GetData(name) {
            event.preventDefault();
            $.ajax({
                url: "/Home/" + name, // Assuming this route handles fetching all students
                success: function (result) { // json or HTML
                    // Assuming 'result' contains the list of students in HTML format
                    document.getElementById("PlaceDetails").innerHTML = result;
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching student data: ", error);
                }
            });
        }
        window.onload = function () {
            GetData('_PlacesPartial');
        };
     
    </script>
    <script>
        function favoritePlace(placeId) {
            window.location.href = '/Home/FavoritePlace/' + placeId;
        }
    </script>
}