@model WebApplication7.ViewModels.PlaceViewModel

@{
    ViewData["Title"] = "GetPlace";
}
<div class="ad-container">
    <div class="text-container">
        <h1>@Model.SpecificPlace.Place_Name</h1>
        <h3>@Model.SpecificPlace.Place_City</h3>
        <p>@Model.SpecificPlace.Description</p>
        <p>@Model.SpecificPlace.Place_Rating</p>
        <p> @Model.SpecificPlace.Place_Price EGP</p>
        <a href="/Booking/Create/@Model.SpecificPlace.Place_Id" class="cta-button">Book Now</a>
    </div>
    <div class="image-container">
        
            @if (Model.SpecificPlace.imageSrc == null || Model.SpecificPlace.imageSrc == "")
            {
                <img src="\Images\no-image-found.jpg" alt="NOImage" />
            }
            else
            {
                <img src="@Model.SpecificPlace.imageSrc" alt="NOImage" />
            }
        
    </div>
    
</div>
<div>
    
    <a asp-action="Index">Back to List</a>
</div>

<div class="rating-box">
    <h2>Rate this Place</h2>
    <form class="rating-form" asp-action="Index" asp-controller="Rate" asp-route-id="@Model.SpecificPlace.Place_Id" method="post">
        <input type="radio" id="star5" name="rating" value="5" required>
        <label for="star5" title="5 stars">&#9733;</label>

        <input type="radio" id="star4" name="rating" value="4">
        <label for="star4" title="4 stars">&#9733;</label>

        <input type="radio" id="star3" name="rating" value="3">
        <label for="star3" title="3 stars">&#9733;</label>

        <input type="radio" id="star2" name="rating" value="2">
        <label for="star2" title="2 stars">&#9733;</label>

        <input type="radio" id="star1" name="rating" value="1">
        <label for="star1" title="1 star">&#9733;</label>

        <button type="submit" ></button>
    </form>
    <p class="rating-output">Rating: <span id="current-rating">0</span></p>
</div>

<script>
    const ratingForm = document.querySelector('.rating-form');
    const ratingOutput = document.getElementById('current-rating');

    ratingForm.addEventListener('change', function () {
        const selectedRating = ratingForm.querySelector('input[name="rating"]:checked').value;
        ratingOutput.textContent = selectedRating;
    });
</script>

<style>
    .rating-box {
        background-color: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        text-align: center;
      
    }

    h2 {
        margin-bottom: 20px;
    }

    .rating-form {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

        .rating-form input {
            display: none;
        }

        .rating-form label {
            font-size: 2rem;
            color: #ccc;
            cursor: pointer;
            padding: 0 5px;
            transition: color 0.3s;
        }

            .rating-form label:hover,
            .rating-form input:checked ~ label {
                color: gold;
            }

    .rating-output {
        font-size: 1.2rem;
        color: #333;
    }
</style>
<h3>People Reviews</h3>
@foreach (var item in Model.review)
{
    <p>@item.Comment</p>
}

<form asp-action="GetUserId" asp-route-PlaceId="@Model.SpecificPlace.Place_Id" asp-route-Review="@Model.Review" class="">
    <div class="form-group">
        <label asp-for="Review">Add Your Review</label>
        <textarea asp-for="Review" class="form-control"></textarea>
    </div>
    <button type="submit" class="cta-button">Send Review</button>
</form>


