@model WebApplication7.Models.Contact_Us
<link href="/css/UserEdit.css" rel="stylesheet" />
<form asp-action="EditUser" enctype="multipart/form-data" method="post" class="">
    <div class="profile-section">
        <div class="profile-card">
            <h4>@Model.Name</h4>

            <p>Account</p>
            <ul class="profile-nav">
                <li><a href="#">Profile</a></li>
                <li><a href="#">Notifications</a></li>
            </ul>
        </div>

        <div class="form-section">
            <h5>Profile Details</h5>
            <div class="row">
                <div class="col">
                    <label asp-for="Name" class="form-label">First Name</label>
                    <input asp-for="Name" class="form-control" value="">
                </div>
                <div class="col">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" readonly>
                </div>
            </div>

            <h5>Contact Details</h5>
            <div class="row">
                <div class="col">
                    <label asp-for="Message" class="form-label">Mobile Phone</label>
                    <input asp-for="Message" class="form-control">
                </div>
            </div>

        </div>

        <button type="submit" class="btn btn-primary save-btn">Save</button>
      
    </div>

    </div>
</form>
